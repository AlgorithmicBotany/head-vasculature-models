PHYLLOTAXIS MODEL:
	run:
		lpfg -w 1024 1024 materials.mat lsystem.l view.v anim.a contours.cset functions.fset

L-system:
	EDIT lsystem.l

View:
	EDIT view.v

Animation:
	EDIT anim.a

Materials:
	MEDIT materials.mat

Make movie:
	ffmpeg -framerate 60 -start_number 000 -i lsystem%04d.png -c libx264 -preset medium -r 30 -pix_fmt yuv420p gerbera.mp4

LONGITUDINAL SECTIONS:
	run:
		lpfg -w 1280 768 materials_sections.mat lsystem_sections.l view_sections.v anim_sections.a contours.cset functions.fset

L-system:
	EDIT lsystem_sections.l

View:
	EDIT view_sections.v

Animation:
	EDIT anim_sections.a

Materials:
	MEDIT materials_sections.mat

RECEPTACLE MODEL:
	run:
		lpfg -w 1280 768 materials_receptacle.mat lsystem_receptacle.l view_receptacle.v anim_receptacle.a contours.cset functions.fset

L-system:
	EDIT lsystem_receptacle.l

View:
	EDIT view_receptacle.v

Animation:
	EDIT anim_receptacle.a

Materials:
	MEDIT materials_receptacle.mat

Make movie:
	ffmpeg -framerate 60 -start_number 000 -i lsystem_receptacle%04d.png -c libx264 -preset medium -r 30 -pix_fmt yuv420p receptacle.mp4

GALLERY:
	functions:
		gallery functions.fset
	contours:
		gallery contours.cset

MARKERS:
	contours_with_markers:
		gallery contours_markers.cset
	copy_contours:
		bash -c "cp contours_markers.cset contours.cset"
	generate:
		lpfg lsystem_markers.l view.v contours_markers.cset functions.fset
	edit:
		EDIT lsystem_markers.l

Description:
	EDIT README.md

